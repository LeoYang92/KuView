{
    "env": {
        "browser": true,
        "es2021": true,
		"node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "vue"
    ],
     "rules": {
		"semi": ["error", "always"], // 强制使用分号
		"comma-dangle": ["error", "never"], // 多行对象和数组的最后不要加逗号
		"vue/html-self-closing": "error"
    }
}
